---
import Image from "astro/components/Image.astro";
import product1 from "../../assets/product-1.png";
import product2 from "../../assets/product-2.png";
import product3 from "../../assets/product-3.png";
import product4 from "../../assets/product-4.png";
import product5 from "../../assets/product-5.png";
import product6 from "../../assets/product-6.png";

// Datos de los productos
const products = [
  {
    id: 1,
    name: "Kit básico de 16 cámaras",
    description: "Instalación incluida",
    image: product1,
    alt: "Cámara de seguridad IP 4K 360 grados",
  },
  {
    id: 2,
    name: "Kit básico de 2 cámaras",
    description: "Instalación incluida",
    image: product2,
    alt: "Cámara PTZ con zoom 20x",
  },
  {
    id: 3,
    name: "Kit básico de 4 cámaras",
    description: "Instalación incluida",
    image: product3,
    alt: "Sistema NVR 32 canales",
  },
  {
    id: 4,
    name: "Alarma Inalambrica",
    description: "Instalación incluida",
    image: product4,
    alt: "Cámara Wi-Fi con app móvil",
  },
  {
    id: 5,
    name: "Kit básico de 6 cámaras",
    description: "Instalación incluida",
    image: product5,
    alt: "Cámara domo para interiores",
  },
  {
    id: 6,
    name: "Kit básico de 8 cámaras",
    description: "Instalación incluida",
    image: product6,
    alt: "Kit completo de 4 cámaras",
  },
];
---

<section class="products-section">
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h2 class="title">Nuestros Productos</h2>
      <p class="subtitle">
        Tecnología de vanguardia para cada necesidad de seguridad
      </p>
    </div>

    <!-- Products Grid -->
    <div class="products-grid">
      {
        products.map((product) => (
          <div class="product-card">
            <span class="badge-1">1 año de garantía</span>
            <div class="product-image-container">
              <Image
                src={product.image}
                alt={product.alt}
                class="product-image"
                loading="lazy"
              />
            </div>
            <div class="badge-container">
          
            <span class="badge-2">Instalación incluida</span>
            </div>
            <div class="product-info">
              <h3 class="product-name">{product.name}</h3>

              <div class="footer-card-container">
                <div class="card-text">
<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 64 64" aria-label="Ícono celular rojo elegante" role="img" fill="none" stroke="#c53030" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
  <!-- Cuerpo -->
  <rect x="18" y="8" width="28" height="48" rx="6" ry="6" />
  <!-- Pantalla -->
  <rect x="24" y="14" width="16" height="36" rx="3" ry="3" />
  <!-- Altavoz -->
  <line x1="28" y1="10" x2="36" y2="10" />
  <!-- Botón Inicio -->
  <circle cx="32" cy="56" r="2" />
  <!-- Cámara frontal -->
  <circle cx="32" cy="11" r="1" />
</svg>






                  <span class="product-description">Acceso remoto</span>
                </div>
                 <div class="card-text">
<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 64 64" aria-label="Ícono disco duro rojo" role="img" fill="none" stroke="#c53030" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
  <!-- Cuerpo rectangular -->
  <rect x="8" y="18" width="48" height="28" rx="5" ry="5" />
  <!-- Plato circular -->
  <circle cx="32" cy="32" r="12" />
  <!-- Eje central -->
  <circle cx="32" cy="32" r="3" />
  <!-- Cabezal de lectura -->
  <line x1="32" y1="32" x2="46" y2="22" />
</svg>





                  <span class="product-description">1TB</span>
                </div>
                  <div class="card-text">
<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 64 64" aria-label="Icono cámara rojo elegante" role="img" fill="none" stroke="#c53030" stroke-width="1.5" stroke-linejoin="round" stroke-linecap="round">
  <!-- Cuerpo rectangular con bordes redondeados -->
  <rect x="15" y="22" width="34" height="20" rx="4" ry="4" />
  
  <!-- Lente (círculo) -->
  <circle cx="32" cy="32" r="9" />
  
  <!-- Lente interior (círculo relleno) -->
  <circle cx="32" cy="32" r="5" fill="#c53030" stroke="none" />
</svg>





                  <span class="product-description">Cámara infrarroja</span>
                </div>
                
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .badge-container{
    display: flex;
    justify-content: space-around;
    margin-bottom: 30px;
  }
  .badge-1{
    position: absolute;
    background-color: var(--btn-primary-color);
    padding: 10px;
    color: white;
    font-size: 0.8rem;
   
    top: 0px;
    left: 0px;

  }
   .badge-2{
    background-color: var(--black);
    padding: 8px;
    color: white;
    font-size: 0.8rem;
    border-radius: 10px;
  }
  .card-text{
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .footer-card-container {
    display: flex;
    gap: 15px;
  }
  .products-section {
    padding: 5rem 0;
    background-color: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-card {
    position: relative;
    background: white;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .product-image-container {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150px;
  }

  .product-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    line-height: 1.4;
    margin: 0;
  }

  .product-description {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .products-section {
      padding: 3rem 0;
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-card {
      padding: 1.5rem;
    }

    .header {
      margin-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }

    .product-card {
      padding: 1.25rem;
    }

    .title {
      font-size: 1.75rem;
    }
  }
</style>
