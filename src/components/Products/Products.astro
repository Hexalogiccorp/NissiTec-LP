---
// Datos de los productos
const products = [
  {
    id: 1,
    name: "Cámara de seguridad IP 4K Full HD 360°",
    model: "CCTV-4K-360",
    image: "/products/camera-360.png",
    alt: "Cámara de seguridad IP 4K 360 grados"
  },
  {
    id: 2,
    name: "Cámara de seguridad PTZ con zoom 20x",
    model: "CCTV-PTZ-20X",
    image: "/products/camera-ptz.png",
    alt: "Cámara PTZ con zoom 20x"
  },
  {
    id: 3,
    name: "Sistema NVR 32 canales con almacenamiento",
    model: "NVR-32CH-8TB",
    image: "/products/nvr-system.png",
    alt: "Sistema NVR 32 canales"
  },
  {
    id: 4,
    name: "Cámara de seguridad Wi-Fi con app móvil",
    model: "CCTV-WIFI-HD",
    image: "/products/camera-wifi.png",
    alt: "Cámara Wi-Fi con app móvil"
  },
  {
    id: 5,
    name: "Cámara domo discreta para interiores",
    model: "CCTV-DOME-HD",
    image: "/products/camera-dome.png",
    alt: "Cámara domo para interiores"
  },
  {
    id: 6,
    name: "Kit completo 4 cámaras + NVR + instalación",
    model: "KIT-COMPLETE-4CH",
    image: "/products/complete-kit.png",
    alt: "Kit completo de 4 cámaras"
  }
];
---

<section class="products-section">
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h2 class="title">Nuestros Productos</h2>
      <p class="subtitle">Tecnología de vanguardia para cada necesidad de seguridad</p>
    </div>

    <!-- Products Grid -->
    <div class="products-grid">
      {products.map((product) => (
        <div class="product-card">
          <div class="product-image-container">
            <img
              src={product.image || "/placeholder.svg"}
              alt={product.alt}
              class="product-image"
              loading="lazy"
            />
          </div>
          
          <div class="product-info">
            <h3 class="product-name">{product.name}</h3>
            <p class="product-model">{product.model}</p>
            
            <button class="request-info-btn" type="button">
              Solicitar información
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .products-section {
    padding: 5rem 0;
    background-color: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .product-image-container {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150px;
  }

  .product-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    line-height: 1.4;
    margin: 0;
  }

  .product-model {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
    margin: 0;
  }

  .request-info-btn {
    background-color: var(--nav-bg);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    margin-top: 0.5rem;
  }

  .request-info-btn:hover {
    background-color: #3b82f6;
    transform: translateY(-1px);
  }

  .request-info-btn:active {
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .products-section {
      padding: 3rem 0;
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-card {
      padding: 1.5rem;
    }

    .header {
      margin-bottom: 3rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }

    .product-card {
      padding: 1.25rem;
    }

    .title {
      font-size: 1.75rem;
    }
  }
</style>

