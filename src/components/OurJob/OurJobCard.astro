---
const { imageUrl, cardTitle, cardDescription, alt } = Astro.props;
---

<div class="portfolio-item">
  <img src={imageUrl} alt={alt} class="portfolio-image" />
  <div class="portfolio-overlay">
    <div class="overlay-content">
      <h3 class="project-title">{cardTitle}</h3>
      <p class="project-description">{cardDescription}</p>
    </div>
  </div>
</div>

<style>
  .project-title {
    color: white;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .portfolio-item {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .portfolio-item:hover {
    transform: translateY(-4px);
    box-shadow:
      0 10px 25px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  .portfolio-item:hover .portfolio-image {
    transform: scale(1.05);
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }
  .overlay-content {
    color: var(--white);
  }
  .portfolio-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover .portfolio-image {
    transform: scale(1.05);
  }

  .portfolio-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 100%
    );
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }
  .project-description {
    color: #e5e7eb;
    font-size: 0.875rem;
    opacity: 0.9;
  }

  @media (min-width: 768px) {
    .portfolio-image {
      height: 280px;
    }
    .overlay-content {
      padding: 1rem;
    }

    .project-title {
      font-size: 1rem;
    }
    .project-description {
      font-size: 0.8rem;
    }
  }
  @media (min-width: 1024px) {
    .portfolio-image {
      height: 300px;
    }
  }

  @media (max-width: 767px) {
    .portfolio-image {
      height: 220px;
    }
  }

  @media (max-width: 480px) {
    .portfolio-image {
      height: 200px;
    }
    .portfolio-overlay {
      padding: 1rem;
    }
  }
</style>
