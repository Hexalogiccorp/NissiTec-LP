---
import OurJobCard from "./OurJobCard.astro";
import job1 from "../../assets/Job-1.jpg";
import job2 from "../../assets/Job-2.jpg";
import job3 from "../../assets/Job-3.jpg";
import job4 from "../../assets/Job-4.jpg";
import job5 from "../../assets/Job-5.jpg";
import job6 from "../../assets/Job-6.jpg";
---

<section id="trabajos" class="portfolio-section">
  <div class="container">
    <div class="header">
      <h2 class="section-title">Nuestros Trabajos</h2>
      <p class="section-subtitle">
        Galería de instalaciones y proyectos realizados
      </p>
    </div>

    <div class="portfolio-grid">
      <OurJobCard
        image={job1}
        cardTitle="Instalación de vallado perimetral"
        cardDescription="Montaje de cerca de seguridad para garantizar protección y control de acceso."
        alt="Instalación de cámaras de seguridad"
      />
      <OurJobCard
        image={job2}
        cardTitle="Servicio de Seguridad para Eventos"
        cardDescription="Supervisión y resguardo de áreas durante actividades y espectáculos."
        alt="Instalación de cámaras de seguridad"
        position=""
      />
      <OurJobCard
        image={job3}
        cardTitle="Instalación cámaras de seguridad"
        cardDescription="Colocación de cámaras de seguridad para control y supervisión."
        alt="Instalación de cámaras de seguridad"
        position=""
      />
      <OurJobCard
        image={job4}
        cardTitle="Instalación y mantenimiento de sistemas de seguridad"
        cardDescription="Un técnico de seguridad de la empresa realiza la instalación de equipos de red para garantizar la máxima protección."
        alt="Instalación de cámaras de seguridad"
        position="top"
      />
      <OurJobCard
        image={job5}
        cardTitle="Instalación cámaras de seguridad"
        cardDescription="Montaje de sistema de videovigilancia con cámaras de alta resolución para control de espacios."
        alt="Instalación de cámaras de seguridad"
        position="top"
      />
      <OurJobCard
        image={job6}
        cardTitle="Instalación cámaras de seguridad"
        cardDescription="Colocación de cámaras de seguridad para control y supervisión."
        alt="Instalación de cámaras de seguridad"
        position=""
      />
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    background-color: white;
    padding: 4rem 1rem;
  }

  .container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: var(--text-color);
    font-size: 1.125rem;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .cta-section {
    text-align: center;
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 767px) {
    .portfolio-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .header {
      margin-bottom: 2rem;
    }

    .portfolio-grid {
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-section {
      padding: 2rem 1rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .portfolio-grid {
      gap: 1rem;
    }

    .view-more-button {
      padding: 0.75rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>
