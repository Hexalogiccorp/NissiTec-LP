        imageUrl="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0e/d9/fa/1b/lost-valley.jpg?w=1200&h=-1&s=1"
        cardTitle="Instalación Residencial"
        cardDescription="Sistema de seguridad completo"
        alt="Instalación de cámaras de seguridad"
      />
      <OurJobCard
        imageUrl="https://www.vivosano.org/wp-content/uploads/2022/08/seguridad-en-el-trabajo-1024x683.jpg"
        cardTitle="Instalación Residencial"
        cardDescription="Sistema de seguridad completo"
        alt="Instalación de cámaras de seguridad"
      />
      <OurJobCard
        imageUrl="https://www.vivosano.org/wp-content/uploads/2022/08/seguridad-en-el-trabajo-1024x683.jpg"
        cardTitle="Instalación Residencial"
        cardDescription="Sistema de seguridad completo"
        alt="Instalación de cámaras de seguridad"
      />
      <OurJobCard
        imageUrl="https://www.vivosano.org/wp-content/uploads/2022/08/seguridad-en-el-trabajo-1024x683.jpg"
        cardTitle="Instalación Residencial"
