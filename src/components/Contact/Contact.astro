---
import Form from "./Form.astro";

// ContactInfoSection.astro
---

<section id="contacto" class="contact-info-section">
  <div class="container">
    <div class="header">
      <h2 class="section-title">Contáctanos</h2>
      <p class="section-subtitle">
        Estamos aquí para ayudarte a encontrar la solución de seguridad perfecta
      </p>
    </div>

    <Form />

    <!-- Contact Information - Below Form -->
    <div class="contact-info">
      <div class="info-flex">
        <!-- Phone -->
        <div class="info-item">
          <div class="info-icon">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
          </div>
          <div class="info-content">
            <h4 class="info-title">Teléfono</h4>
            <p class="info-detail">+52 (55) 1234-5678</p>
            <p class="info-detail">+52 (55) 8765-4321</p>
          </div>
        </div>

        <!-- Email -->
        <div class="info-item">
          <div class="info-icon">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="info-content">
            <h4 class="info-title">Email</h4>
            <p class="info-detail">info@securevision.com</p>
            <p class="info-detail">ventas@securevision.com</p>
          </div>
        </div>

        <!-- Address -->
        <div class="info-item">
          <div class="info-icon">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="info-content">
            <h4 class="info-title">Dirección</h4>
            <p class="info-detail">Av. Insurgentes Sur 1234</p>
            <p class="info-detail">Col. Del Valle, CDMX</p>
            <p class="info-detail">C.P. 03100</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-info-section {
    padding: 4rem 1rem;
    background-color: #f9fafb;
  }

  .container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--black);
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: var(--text-color);
    font-size: 1.125rem;
  }

  .info-flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 1.5rem;
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    width: 200px;
  }

  .info-icon {
    width: 2.5rem;
    height: 2.5rem;
    background-color: #e5b513;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFF;
    flex-shrink: 0;
  }

  .info-content {
    flex: 1;
  }

  /* Responsive Design */
  @media (width < 750px) {
    .info-flex {
      flex-direction: column;
      align-items: center;
    }
  }
  @media (min-width: 768px) {
    .info-item {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .info-content {
      text-align: center;
    }
  }

  @media (max-width: 767px) {
    .contact-info-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .header {
      margin-bottom: 2rem;
    }

    .contact-info {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .contact-info-section {
      padding: 2rem 1rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .contact-info {
      padding: 1rem;
    }

    .info-icon {
      width: 2rem;
      height: 2rem;
    }
  }
</style>
