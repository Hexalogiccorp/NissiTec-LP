<style>
  .navbar {
    width: 100%;
    background-color: var(--black);
    height: 100px;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5%; 
    position: fixed;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: 10px;
    flex-shrink: 0;
  }

  .logo-text {
    color: var(--body-bg);
    font-weight: 700;
    font-size: 1.5rem;
  }

  .logo-icon img {
    height: 80px;
    width: 80px;
    object-fit: contain;
  }

  .nav-menu {
    display: flex;
    justify-content: center;
    flex-grow: 1;
  }

  .nav-links {
    display: flex;
    gap: 20px;
    list-style: none;
  }

  .nav-link {
    color: var(--body-bg);
    text-decoration: none;
    font-weight: 500;
    padding: 8px 12px;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--hover-font);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-shrink: 0;
  }

  .nav-btn {
    background: var(--hover-font);
    color: var(--black);
    text-decoration: none;
    padding: 10px 20px;
    font-weight: 600;
    border-radius: 4px;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block;
    text-align: center;
  }

  .nav-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(234, 178, 23, 0.514);
  }

  .nav-hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .hamburger-line {
    display: block;
    width: 100%;
    height: 3px;
    background: var(--body-bg);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .nav-hamburger.active .line1 {
    transform: translateY(9px) rotate(45deg);
  }

  .nav-hamburger.active .line2 {
    opacity: 0;
  }

  .nav-hamburger.active .line3 {
    transform: translateY(-9px) rotate(-45deg);
  }

  .desktop-only {
    display: block;
  }

  .mobile-only {
    display: none;
  }

  @media (max-width: 770px) {
    .navbar-container {
      padding: 0 15px;
    }

    .nav-hamburger {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      top: 80px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 80px);
      background: var(--black);
      flex-direction: column;
      padding: 40px 20px;
      transition: left 0.3s ease;
      overflow-y: auto;
      z-index: 10;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-links {
      flex-direction: column;
      gap: 25px;
      width: 100%;
    }

    .nav-link {
      font-size: 1.2rem;
      text-align: center;
      padding: 12px 0;
      display: block;
    }

    .desktop-only {
      display: none;
    }

    .mobile-only {
      display: block;
      width: 100%;
      margin-top: 20px;
    }

    .nav-btn.mobile-only {
      padding: 12px 0;
      font-size: 1.2rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("nav-hamburger");
    const navMenu = document.getElementById("nav-menu");

    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      navMenu.classList.toggle("active");
      document.body.style.overflow = navMenu.classList.contains("active")
        ? "hidden"
        : "";
    });

    document.querySelectorAll(".nav-link, .nav-btn").forEach((link) => {
      link.addEventListener("click", () => {
        if (window.innerWidth <= 768) {
          hamburger.classList.remove("active");
          navMenu.classList.remove("active");
          document.body.style.overflow = "";
        }
      });
    });

    window.addEventListener("resize", () => {
      if (window.innerWidth > 768) {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
        document.body.style.overflow = "";
      }
    });
  });
</script>
